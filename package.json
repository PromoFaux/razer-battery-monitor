{
    "scripts": {
        "prebuild": "shx mkdir -p com.promofaux.razer-battery.sdPlugin/bin/node_modules",
        "copy:usb-worker": "shx cp src/services/usb-worker.cjs com.promofaux.razer-battery.sdPlugin/bin/usb-worker.cjs",
        "copy:usb": "shx cp -r node_modules/usb com.promofaux.razer-battery.sdPlugin/bin/node_modules/usb",
        "copy:node-addon-api": "shx cp -r node_modules/node-addon-api com.promofaux.razer-battery.sdPlugin/bin/node_modules/node-addon-api",
        "copy:node-gyp-build": "shx cp -r node_modules/node-gyp-build com.promofaux.razer-battery.sdPlugin/bin/node_modules/node-gyp-build",
        "copy:types": "shx cp -r node_modules/@types com.promofaux.razer-battery.sdPlugin/bin/node_modules/@types",
        "build:rollup": "rollup -c",
        "build:copy": "npm run copy:usb-worker && npm run copy:usb && npm run copy:node-addon-api && npm run copy:node-gyp-build && npm run copy:types",
        "build": "npm run build:rollup && npm run build:copy",
        "watch": "rollup -c -w --watch.onEnd=\"npm run prebuild && npm run build:copy\""
    },
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "^1.5.0",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "~20.15.0",
        "rollup": "^4.0.2",
        "shx": "^0.3.4",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@elgato/streamdeck": "^1.0.0",
        "@types/usb": "^2.0.4",
        "usb": "^2.16.0"
    }
}
